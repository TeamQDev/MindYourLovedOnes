<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlLiving"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension70dp"
            android:background="@color/colorFour"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/dimension35dp"
                android:layout_height="@dimen/dimension45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimension10dp"
                android:src="@drawable/backward_arrow" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimension10dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Activity"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimension21dp"


                />

            <ImageView
                android:id="@+id/imgDone"
                android:layout_width="@dimen/dimension30dp"
                android:layout_height="@dimen/dimension30dp"
                android:layout_toLeftOf="@+id/imgRight"
                android:layout_centerVertical="true"

                android:layout_marginRight="@dimen/dimension5dp"
                android:layout_marginLeft="@dimen/dimension10dp"
                android:src="@drawable/check_mark"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="@dimen/dimension40dp"
                android:layout_height="@dimen/dimension60dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimension5dp"
                android:src="@drawable/menudot"
                android:visibility="visible"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:custom="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/header"
            >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimension45dp"
                android:background="@color/colorSkyBlue"
                android:gravity="center"
                android:text="XYZ XYZ"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimension22dp" />
            <ImageView
                android:id="@+id/imgInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dimension5dp"
                android:visibility="gone"
                />
            <RelativeLayout
                android:id="@+id/rlFunctional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_margin="@dimen/dimension10dp"
                android:background="@drawable/gray_white_border"
                android:padding="@dimen/dimension5dp">

                <ImageView
                    android:id="@+id/imgFunctional"
                    android:layout_width="@dimen/dimension70dp"
                    android:layout_height="@dimen/dimension70dp"

                    android:layout_marginRight="@dimen/dimension10dp"
                    android:padding="@dimen/dimension6dp"
                    android:src="@drawable/functional"
                    />

                <TextView
                    android:id="@+id/txtFunctionalHeader"
                    style="@style/EmergencyCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgFunctional"
                    android:layout_toLeftOf="@+id/imgInfoF"
                    android:text="Activities of Daily Living (ADL)"
                    android:textColor="@color/colorBlue"
                    />
                <TextView
                    android:id="@+id/txtFunctionalSubHeader"
                    style="@style/EmergencyCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgFunctional"
                    android:layout_toLeftOf="@+id/imgInfoF"
                    android:text="Needs Help With"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:textSize="@dimen/dimension18dp"
                    android:layout_below="@+id/txtFunctionalHeader"
                    />
                <ImageView
                    android:id="@+id/imgInfoF"
                    android:layout_width="@dimen/dimension35dp"
                    android:layout_height="@dimen/dimension35dp"
                    android:src="@drawable/info"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimension5dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlBathing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtFunctionalSubHeader"
                    android:layout_toRightOf="@+id/imgFunctional"
                    android:layout_marginTop="@dimen/dimension10dp"
                    >

                    <TextView
                        android:id="@+id/txtBathing"
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Bathing"
                        android:layout_toLeftOf="@+id/tbBathing"
                        android:layout_alignParentLeft="true"

                        />
                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="The ability to clean oneself and perform grooming activities like shaving and brushing teeth"
                        android:layout_below="@+id/txtBathing"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        />
                    <ToggleButton
                        android:id="@+id/tbBathing"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlContinence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlBathing"
                    android:layout_toRightOf="@+id/imgFunctional"

                    >

                    <TextView
                        android:id="@+id/txtC"
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Continence"
                        android:layout_toLeftOf="@+id/tbContinence"
                        android:layout_alignParentLeft="true"

                        />
                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="The ability to control one's bladder and bowel functions."
                        android:layout_below="@+id/txtC"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        />
                    <ToggleButton
                        android:id="@+id/tbContinence"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDressing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlContinence"
                    android:layout_toRightOf="@+id/imgFunctional"
                    >

                    <TextView

                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Dressing"
                        android:layout_toLeftOf="@+id/tbDressing"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/txtD"

                        />
                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="The ability to get dressed by oneself without struggling with buttons and zippers"
                        android:layout_below="@+id/txtD"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        />
                    <ToggleButton
                        android:id="@+id/tbDressing"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlFeeding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlDressing"
                    android:layout_toRightOf="@+id/imgFunctional"

                    >

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Eating"
                        android:id="@+id/txtF"

                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView"
                        android:layout_toEndOf="@+id/textView" />
                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="The ability to feed oneself"
                        android:layout_below="@+id/txtF"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        android:id="@+id/textView" />
                    <ToggleButton
                        android:id="@+id/tbfeed"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlToileting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlFeeding"
                    android:layout_toRightOf="@+id/imgFunctional"

                    >

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Toileting"
                        android:layout_toLeftOf="@+id/tbToileting"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/txtT"

                        />
                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="The ability to get on and off the toilet"
                        android:layout_below="@+id/txtT"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        />
                    <ToggleButton
                        android:id="@+id/tbToileting"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlTranfering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlToileting"
                    android:layout_toRightOf="@+id/imgFunctional"

                    >

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Tranferring"
                        android:layout_toLeftOf="@+id/tbTranfering"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/txtDf"

                        />

                    <TextView
                        style="@style/EmergencyDescs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Being able to either walk or move oneself from a bed to a wheelchair and back again."
                        android:layout_below="@+id/txtDf"
                        android:layout_alignParentLeft="true"
                        android:textSize="@dimen/dimension16dp"
                        android:visibility="gone"
                        />

                    <ToggleButton
                        android:id="@+id/tbTranfering"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/etOtherFunction"
                    style="@style/EmergencyDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTranfering"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:layout_marginRight="@dimen/dimension15dp"
                    android:layout_marginBottom="@dimen/dimension10dp"
                    android:background="@drawable/darkgray_white_border"
                    android:gravity="top"
                    android:hint="Other - specify"
                    android:textColor="@color/colorBlue"
                    android:padding="@dimen/dimension8dp"
                    android:layout_toRightOf="@+id/imgFunctional"
                    android:imeOptions="actionNext"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    />

                <EditText
                    android:id="@+id/etFunctionalNote"
                    style="@style/EmergencyDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etOtherFunction"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:layout_marginRight="@dimen/dimension15dp"
                    android:layout_marginBottom="@dimen/dimension10dp"
                    android:background="@drawable/darkgray_white_border"
                    android:gravity="top"
                    android:hint="Note"
                    android:textColor="@color/colorBlue"
                    android:padding="@dimen/dimension8dp"
                    android:layout_toRightOf="@+id/imgFunctional"
                    android:imeOptions="actionNext"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/view3"
                android:layout_height="@dimen/dimension20dp"
                android:layout_width="match_parent"
                android:background="@color/colorLightGray"
                android:layout_below="@+id/rlFunctional"
                />
            <RelativeLayout
                android:id="@+id/rlInstrumental"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view3"
                android:layout_margin="@dimen/dimension10dp"
                android:background="@drawable/gray_white_border"
                android:padding="@dimen/dimension5dp">

                <ImageView
                    android:id="@+id/imgInstrumental"
                    android:layout_width="@dimen/dimension70dp"
                    android:layout_height="@dimen/dimension70dp"

                    android:layout_marginRight="@dimen/dimension10dp"
                    android:padding="@dimen/dimension6dp"
                    android:src="@drawable/functional"
                    />

                <TextView
                    android:id="@+id/txtInstrumentalHeader"
                    style="@style/EmergencyCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgInstrumental"
                    android:layout_toLeftOf="@+id/imgInfoI"
                    android:textColor="@color/colorBlue"
                    android:text="Instrumental Activities of Daily Living (IADL)" />
                <TextView
                    android:id="@+id/txtInstrumentalSubHeader"
                    style="@style/EmergencyCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgInstrumental"
                    android:layout_toLeftOf="@+id/imgInfoI"
                    android:text="Needs Help With"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:textSize="@dimen/dimension18dp"
                    android:layout_below="@+id/txtInstrumentalHeader"
                    />

                <ImageView
                    android:id="@+id/imgInfoI"
                    android:layout_width="@dimen/dimension35dp"
                    android:layout_height="@dimen/dimension35dp"
                    android:src="@drawable/info"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/dimension5dp"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:id="@+id/rlTransport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtInstrumentalSubHeader"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Accessing transportation"
                        android:layout_toLeftOf="@+id/tbTransport"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbTransport"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTransport"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Caring for pets"
                        android:layout_toLeftOf="@+id/tbPets"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbPets"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDriving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlPets"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Driving"
                        android:layout_toLeftOf="@+id/tbDriving"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbDriving"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlKeeping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlDriving"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:layout_alignParentLeft="true"
                        android:text="Housekeeping"
                        android:layout_toLeftOf="@+id/tbKeeping"/>

                    <ToggleButton
                        android:id="@+id/tbKeeping"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlMedication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlKeeping"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Managing medications"
                        android:layout_toLeftOf="@+id/tbMedication"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbMedication"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/rlFinances"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlMedication"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Managing personal finances"
                        android:layout_toLeftOf="@+id/tbFinances"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbFinances"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPreparing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlFinances"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Preparing meals"
                        android:layout_toLeftOf="@+id/tbPreparing"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbPreparing"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlShopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlPreparing"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Shopping for groceries or clothes"
                        android:layout_toLeftOf="@+id/tbShopping"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbShopping"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlUsing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlShopping"
                    android:layout_toRightOf="@+id/imgInstrumental">

                    <TextView
                        style="@style/EmergencyDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimension50dp"
                        android:gravity="center_vertical"
                        android:padding="@dimen/dimension5dp"
                        android:text="Using a telephone"
                        android:layout_toLeftOf="@+id/tbUsing"
                        android:layout_alignParentLeft="true"
                        />

                    <ToggleButton
                        android:id="@+id/tbUsing"
                        android:layout_width="@dimen/dimension50dp"
                        android:layout_height="@dimen/dimension50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dimension15dp"
                        android:background="@drawable/toggle_selector"
                        android:checked="false"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>v

                <EditText
                    android:id="@+id/etOtherInstrument"
                    style="@style/EmergencyDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlUsing"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:layout_marginRight="@dimen/dimension15dp"
                    android:layout_marginBottom="@dimen/dimension10dp"
                    android:background="@drawable/darkgray_white_border"
                    android:gravity="top"
                    android:hint="Other - specify"
                    android:textColor="@color/colorBlue"
                    android:padding="@dimen/dimension8dp"
                    android:layout_toRightOf="@+id/imgInstrumental"
                    android:imeOptions="actionNext"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    />

                <EditText
                    android:id="@+id/etInstrumentalNote"
                    style="@style/EmergencyDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etOtherInstrument"
                    android:layout_marginTop="@dimen/dimension10dp"
                    android:layout_marginRight="@dimen/dimension15dp"
                    android:layout_marginBottom="@dimen/dimension10dp"
                    android:background="@drawable/darkgray_white_border"
                    android:gravity="top"
                    android:hint="Note"
                    android:textColor="@color/colorBlue"
                    android:padding="@dimen/dimension8dp"
                    android:layout_toRightOf="@+id/imgInstrumental"
                    android:imeOptions="actionNext"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
